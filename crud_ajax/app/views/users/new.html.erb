<div class="container">
  <div class="content-wrapper">
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- CONTENT HERE -->
          <!-- END OF CONTENT -->

           <h2>Selamat Datang</h2>
           <h5>Tambah Data Users</h5>
                <%= form_for (@user) do |f| %>
                <div class="form-group">
                  <%= f.label :username %>
                  <%= f.text_field :username, class: 'form-control' %>
                  <%= @user.errors[:username].first unless @user.errors[:username].blank? %>

                  
                </div>
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.text_field :email, class: 'form-control' %>
                  <%= @user.errors[:email].first unless @user.errors[:email].blank? %>
                  
                </div>

                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: 'form-control' %>
                  <%= @user.errors[:password].first unless @user.errors[:password].blank? %>
                </div>

                <div class="form-group">
                  <%= f.label :humanizer_answer, @user.humanizer_question %>
                <%= f.text_field :humanizer_answer, class: 'form-control' %>
                <%= f.hidden_field :humanizer_question_id %>  
                </div>
                
                <div class="form-group">
                    <%= f.submit :submit %>
                </div>
                <% end %>

        </div>
      </div>
    </section>
  </div>
</div>






  