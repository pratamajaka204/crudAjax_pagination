<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @article, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        
        <div class="form-group">
          <%= f.label :title, class:"control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, cols: 20, rows: 10 , class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :status %>
            <%= f.radio_button :status, "active" , :checked => true  %>
            <%= f.label :article_status, 'active' %>
            <%= f.radio_button :status, "off"  %>
            <%= f.label :article_status, 'off' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>